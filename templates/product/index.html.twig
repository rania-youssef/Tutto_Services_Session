{% extends 'base.html.twig' %}

{% block title %}Les produits
{% endblock %}

{% block body %}
  <div class="bg-light p-3">
    <h1>Les produits</h1>
  </div>

  <div class="row">
    {% for product in products %}
      <div class="col-4 mt-4">
        <div class="border border-dark rounded p-2 clearfix">
          <h2>
            {{ product.title }}
            -
            {{ product.price }}

          </h2>
          <img src=" {{ asset('/uploads/images_directory/' ~ product.image) }}" alt="Image" width="200" height="200" id="imG">

          <hr>
          <a href="{{path('cart_add',{'id':product.id})}}" class="btn btn-success float-right">
            <i class="fas fa-shopping-cart mr-1"></i>
            Ajouter
          </a>
        </div>

      </div>

    {% endfor %}
  </div>
{% endblock %}